{
  "name": "bloggy",
  "version": "1.0.0",
  "description": "**Bloggy** is a simple blog app I built while learning **React**, **Tailwind CSS**, and basic **CRUD** operations.   It uses **React Router** for navigation and connects to my own database to manage post data.",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run-all install:backend install:frontend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "json-server": "json-server --watch frontend/data/db.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaimonThapa/Bloggy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/SaimonThapa/Bloggy/issues"
  },
  "homepage": "https://github.com/SaimonThapa/Bloggy#readme",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
